			<version>${version.camel}</version> </dependency> <dependency> <groupId>org.apache.cxf</groupId>
			<artifactId>cxf-spring-boot-starter-jaxws</artifactId> <version>${cxf.version}</version>
			</dependency> apache cxf client <dependency> <groupId>org.apache.cxf</groupId>
			<artifactId>cxf-rt-frontend-jaxws</artifactId> <version>${cxf.version}</version>
